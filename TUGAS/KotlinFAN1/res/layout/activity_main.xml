<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="30dp"
    android:background="@drawable/masjidd2"
    tools:context=".JadwalSholat">

    <ImageButton
        android:id="@+id/back2"
        android:src="@drawable/ic_chevron_left_black_24dp"
        android:layout_width="wrap_content"
        android:background="#3b4843"
        android:layout_height="wrap_content"/>

    <TextView
        android:text="JADWAL SHOLAT"
        android:textColor="#fff"
        android:textAlignment="center"
        android:textStyle="bold"
        android:textSize="30sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <LinearLayout
        android:layout_marginTop="30dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:orientation="horizontal"
        android:gravity="center"
        android:padding="8dp"
        android:background="@drawable/radius"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:text="DHUHA"
            android:textSize="18sp"
            android:textColor="@color/colorPrimaryDark"
            android:layout_width="100dp"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/txt6"
            android:text="Jam"
            android:textSize="18sp"
            android:textColor="@color/colorPrimaryDark"
            android:textAlignment="textEnd"
            android:layout_width="80dp"
            android:layout_height="wrap_content"/>

    </LinearLayout>

        <LinearLayout
            android:layout_marginTop="10dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:orientation="horizontal"
            android:gravity="center"
            android:padding="8dp"
            android:background="@drawable/radius"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:text="SHUBUH"
                android:layout_width="100dp"
                android:textSize="18dp"
                android:textColor="@color/colorPrimaryDark"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/txt1"
                android:text="Jam"
                android:textSize="18dp"
                android:textColor="@color/colorPrimaryDark"
                android:textAlignment="textEnd"
                android:layout_width="80dp"
                android:layout_height="wrap_content"/>

        </LinearLayout>

    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:orientation="horizontal"
        android:gravity="center"
        android:padding="8dp"
        android:background="@drawable/radius"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:text="DHUHUR"
            android:layout_width="100dp"
            android:textSize="18dp"
            android:textColor="@color/colorPrimaryDark"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/txt2"
            android:text="Jam"
            android:textSize="18dp"
            android:textColor="@color/colorPrimaryDark"
            android:textAlignment="textEnd"
            android:layout_width="80dp"
            android:layout_height="wrap_content"/>

    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:orientation="horizontal"
        android:gravity="center"
        android:padding="8dp"
        android:background="@drawable/radius"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:text="ASHAR"
            android:textColor="@color/colorPrimaryDark"
            android:layout_width="100dp"
            android:textSize="18dp"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/txt3"
            android:text="Jam"
            android:textSize="18dp"
            android:textColor="@color/colorPrimaryDark"
            android:textAlignment="textEnd"
            android:layout_width="80dp"
            android:layout_height="wrap_content"/>

    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:orientation="horizontal"
        android:gravity="center"
        android:padding="8dp"
        android:background="@drawable/radius"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:text="MAGHRIB"
            android:layout_width="100dp"
            android:textSize="18dp"
            android:textColor="@color/colorPrimaryDark"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/txt4"
            android:text="Jam"
            android:textSize="18dp"
            android:textColor="@color/colorPrimaryDark"
            android:textAlignment="textEnd"
            android:layout_width="80dp"
            android:layout_height="wrap_content"/>

    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:orientation="horizontal"
        android:gravity="center"
        android:padding="8dp"
        android:background="@drawable/radius"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:text="ISHA"
            android:layout_width="100dp"
            android:textSize="18dp"
            android:textColor="@color/colorPrimaryDark"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/txt5"
            android:text="Jam"
            android:textSize="18dp"
            android:textColor="@color/colorPrimaryDark"
            android:textAlignment="textEnd"
            android:layout_width="80dp"
            android:layout_height="wrap_content"/>
    </LinearLayout>

    <TextView
        android:text="UPDATE JADWAL SHOLAT"
        android:layout_marginTop="80dp"
        android:layout_gravity="center"
        android:textColor="@color/cardview_light_background"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <EditText
        android:id="@+id/editJadwalSholat"
        android:hint="Edit Jadwal Sholat"
        android:textColor="@color/colorPrimaryDark"
        android:background="@drawable/radius"
        android:padding="10dp"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <GridLayout
        android:columnCount="3"
        android:rowCount="2"
        android:layout_marginTop="15dp"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <Button
            android:text="DHUHA"
            android:id="@+id/btnUpdateDhuha"
            android:layout_marginTop="7dp"
            android:background="@drawable/radius"
            android:layout_width="100dp"
            android:layout_height="wrap_content"/>

        <Button
            android:text="SHUBUH"
            android:id="@+id/btnUpdateShubuh"
            android:layout_marginTop="7dp"
            android:background="@drawable/radius"
            android:layout_width="100dp"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:layout_height="wrap_content"/>

        <Button
            android:text="DHUHUR"
            android:id="@+id/btnUpdateDhuhur"
            android:layout_marginTop="7dp"
            android:background="@drawable/radius"
            android:layout_width="100dp"
            android:layout_height="wrap_content"/>

        <Button
            android:text="ASHAR"
            android:id="@+id/btnUpdateAshar"
            android:layout_marginTop="7dp"
            android:background="@drawable/radius"
            android:layout_width="100dp"
            android:layout_height="wrap_content"/>

        <Button
            android:text="MAGHRIB"
            android:id="@+id/btnUpdateMaghrib"
            android:layout_marginTop="7dp"
            android:background="@drawable/radius"
            android:layout_width="100dp"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:layout_height="wrap_content"/>

        <Button
            android:text="ISHA"
            android:id="@+id/btnUpdateIsha"
            android:layout_marginTop="7dp"
            android:background="@drawable/radius"
            android:layout_width="100dp"
            android:layout_height="wrap_content"/>

    </GridLayout>

</LinearLayout>