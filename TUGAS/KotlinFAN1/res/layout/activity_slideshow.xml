<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:padding="30dp"
    android:background="@drawable/masjidd2"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".Slideshow">

    <ImageButton
        android:id="@+id/back5"
        android:src="@drawable/ic_chevron_left_black_24dp"
        android:layout_width="wrap_content"
        android:background="#3b4843"
        android:layout_height="wrap_content"/>

    <TextView
        android:text="Slideshow"
        android:textColor="#fff"
        android:textAlignment="center"
        android:textStyle="bold"
        android:textSize="30sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <androidx.recyclerview.widget.RecyclerView
        android:layout_marginTop="20dp"
        android:id="@+id/recyclerView"
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <TextView
        android:text="UPDATE SLIDESHOW"
        android:layout_marginTop="40dp"
        android:layout_gravity="center"
        android:textColor="@color/cardview_light_background"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <EditText
        android:id="@+id/editSlideshow"
        android:background="@drawable/radius"
        android:hint="Edit Judul Slideshow"
        android:textColor="@color/colorPrimaryDark"
        android:padding="8dp"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <EditText
        android:id="@+id/editURL"
        android:hint="Edit URL Slideshow"
        android:background="@drawable/radius"
        android:padding="8dp"
        android:textColor="@color/colorPrimaryDark"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>


    <Button
        android:text="UPDATE"
        android:id="@+id/btnUpdateSlideshow"
        android:layout_marginTop="20dp"
        android:background="@drawable/radius"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>


</LinearLayout>